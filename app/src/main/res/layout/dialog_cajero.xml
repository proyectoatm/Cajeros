<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="@android:color/transparent"
    android:gravity="center"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/nombreBanco"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:text="Nombre banco"
                android:gravity="center"
                android:textColor="@color/warning_dark">
            </TextView>
            <TextView
                android:id="@+id/distanciaCajero"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:text="Distancia"
                android:gravity="center"
                android:textColor="@color/warning_dark">
            </TextView>
            <TextView
                android:id="@+id/longitudCajero"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:text="Estado"
                android:gravity="center"
                android:textColor="@color/warning_dark">
            </TextView>
            <TextView
                android:layout_width="400px"
                android:layout_height="50px"
                android:text="Historial de reportes"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="@color/warning_dark">
            </TextView>
            <HorizontalScrollView
                android:layout_width="400px"
                android:layout_height="100px"
                >
                <LinearLayout
                    android:id="@+id/scrollReports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>
            <androidx.appcompat.widget.AppCompatButton
                android:theme="@style/Base.Theme.Cajeros2"
                android:id="@+id/botonDialogIr"
                android:layout_width="150dp"
                android:layout_height="100px"
                android:background="@drawable/gradient_orange"
                android:backgroundTint="@null"
                android:textColor="@color/background_dark"
                android:text="Ir"
                android:layout_marginTop="20px"/>
            <LinearLayout
                android:id="@+id/reportes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:text="Reportar:"
                        android:gravity="center"
                        android:textColor="@color/warning_dark">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatButton
                        android:theme="@style/Base.Theme.Cajeros2"
                        android:id="@+id/reportDisponible"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:background="@drawable/gradient_orange"
                        android:backgroundTint="@null"
                        android:textColor="@color/background_dark"
                        android:text="âœ“"
                        android:layout_marginRight="94px"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:theme="@style/Base.Theme.Cajeros2"
                        android:id="@+id/reportNoDisponible"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:background="@drawable/gradient_orange"
                        android:backgroundTint="@null"
                        android:textColor="@color/background_dark"
                        android:text="X"
                        android:layout_marginLeft="94px"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Atm finder"
                    android:textSize="25px"
                    android:textColor="@color/warning_dark"
                    android:gravity="center">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>