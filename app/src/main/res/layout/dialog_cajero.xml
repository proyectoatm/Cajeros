<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="295dp"
    android:orientation="vertical"
    android:backgroundTint="@android:color/transparent"
    android:gravity="center"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="295dp"
        android:elevation="5dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/nombreBanco"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:text="Nombre banco"
                android:gravity="center"
                android:textColor="@color/warning_dark"
                android:layout_marginTop="30px">
            </TextView>
            <TextView
                android:id="@+id/distanciaCajero"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:text="Distancia"
                android:gravity="center"
                android:textColor="@color/warning_dark">
            </TextView>
            <TextView
                android:id="@+id/longitudCajero"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:text="Longitud"
                android:gravity="center"
                android:textColor="@color/warning_dark"
                android:layout_marginBottom="90px">
            </TextView>
            <androidx.appcompat.widget.AppCompatButton
                android:theme="@style/Base.Theme.Cajeros2"
                android:id="@+id/botonDialogIr"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_orange"
                android:backgroundTint="@null"
                android:textColor="@color/background_dark"
                android:text="Ir"
                android:layout_marginTop="20px"/>
            <androidx.appcompat.widget.AppCompatButton
                android:theme="@style/Base.Theme.Cajeros2"
                android:id="@+id/botonDialogReport"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_orange"
                android:backgroundTint="@null"
                android:textColor="@color/background_dark"
                android:text="Reportar"
                android:layout_marginTop="20px"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>