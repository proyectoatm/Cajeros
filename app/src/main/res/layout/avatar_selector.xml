                        android:id="@+id/avt8"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/a8"
                        android:layout_margin="5dp"
                        />
                    <ImageButton
                        android:id="@+id/avt9"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/a9"
                        android:layout_margin="5dp"
                        />
